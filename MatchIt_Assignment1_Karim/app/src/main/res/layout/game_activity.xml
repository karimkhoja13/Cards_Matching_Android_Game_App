<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ca.gbc.mobile.karim.matchit_assignment1_karim.PlayActivity"
    android:background="@android:color/holo_red_dark">


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/frameLayout2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnBack"
            android:clickable="true"
            android:width="100dp"
            android:height="50dp"
            android:layout_gravity="right|center_vertical"
            android:background="@android:color/black"
            android:textColor="@android:color/holo_blue_light"
            android:text="Stop"
            android:textSize="20dp" />

        <view
            class="ca.gbc.mobile.karim.matchit_assignment1_karim.Timer"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:id="@+id/timerView"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_gravity="left|center_vertical"
            android:text="00:00:00"/>
        <view
            class="ca.gbc.mobile.karim.matchit_assignment1_karim.Timer"
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:id="@+id/timerView1"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_gravity="left|bottom"/>
    </FrameLayout>

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/frameLayout2"
        android:orientation="vertical">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <view
                class="ca.gbc.mobile.karim.matchit_assignment1_karim.CardView"
                android:padding="0dp"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:id="@+id/view1"
                android:layout_marginLeft="15dp" />

            <view
                class="ca.gbc.mobile.karim.matchit_assignment1_karim.CardView"
                android:padding="0dp"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:id="@+id/view2"
                android:layout_marginLeft="15dp"
                android:layout_column="2" />

            <view
                class="ca.gbc.mobile.karim.matchit_assignment1_karim.CardView"
                android:padding="0dp"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:id="@+id/view3"
                android:layout_marginLeft="15dp"
                android:layout_column="3" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp">

            <view
                class="ca.gbc.mobile.karim.matchit_assignment1_karim.CardView"
                android:padding="0dp"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:id="@+id/view4"
                android:layout_marginLeft="15dp" />

            <view
                class="ca.gbc.mobile.karim.matchit_assignment1_karim.CardView"
                android:padding="0dp"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:id="@+id/view5"
                android:scaleType="fitXY"
                android:layout_marginLeft="15dp"
                android:layout_column="2" />

            <view
                class="ca.gbc.mobile.karim.matchit_assignment1_karim.CardView"
                android:padding="0dp"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:id="@+id/view6"
                android:layout_marginLeft="15dp"
                android:layout_column="3" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp">

            <view
                class="ca.gbc.mobile.karim.matchit_assignment1_karim.CardView"
                android:padding="0dp"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:id="@+id/view7"
                android:layout_marginLeft="15dp" />

            <view
                class="ca.gbc.mobile.karim.matchit_assignment1_karim.CardView"
                android:padding="0dp"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:id="@+id/view8"
                android:layout_marginLeft="15dp"
                android:layout_column="2" />

            <view
                class="ca.gbc.mobile.karim.matchit_assignment1_karim.CardView"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:id="@+id/view9"
                android:padding="0dp"
                android:layout_marginLeft="15dp"
                android:layout_column="3" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="10dp">

            <view
                class="ca.gbc.mobile.karim.matchit_assignment1_karim.CardView"
                android:padding="0dp"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:id="@+id/view10"
                android:layout_marginLeft="15dp"></view>

            <view
                class="ca.gbc.mobile.karim.matchit_assignment1_karim.CardView"
                android:padding="0dp"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:id="@+id/view11"
                android:layout_marginLeft="15dp"
                android:layout_column="2" />

            <view
                class="ca.gbc.mobile.karim.matchit_assignment1_karim.CardView"
                android:padding="0dp"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:scaleType="fitXY"
                android:id="@+id/view12"
                android:layout_marginLeft="15dp"
                android:layout_column="3" />
        </TableRow>

    </TableLayout>

</RelativeLayout>
